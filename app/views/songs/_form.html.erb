<%= form_for [@artist, @artist.songs.new] do |f| %>

    <div class="form-group">
        <label>Title</label>
        <%= f.text_field :title, placeholder: "The Girl From Ipanema", class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Album</label>
        <%= f.text_field :album, placeholder: "Bossa Nova Collected", class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Track number on album</label>
        <%= f.number_field :album_track_number, placeholder: "1", class: "form-control" %>
    </div>

    <div class="form-group">
        <label>Release date</label>
        <%= f.date_select :release_date, class: "form-control" %>
    </div>

    <div class="actions">
        <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
<% end %>