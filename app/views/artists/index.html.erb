<div class="col-md-12" style="margin: 20px 0 50px 0;">
<ul class="filter">
    <li><%= link_to "order by artist_name a-z", :sort => "artist_name ASC" %></li>
    <li><%= link_to "order by artist_name z-a", :sort => "artist_name DESC" %></li>
    <li><%= link_to "order by id", :sort => "id" %></li>
    </ul>
</div>

<% @artist.each do |artist| %>
    <div class="col-sm-8 col-md-2">
        <div class="thumbnail category">
            <img src="<%= artist.image_url %>" alt="...">
            <div class="caption">
                <h3 class="category-title">
                    <%= link_to artist.artist_name, artist %>
                </h3>
                <%= link_to "Delete", artist_path( artist.id ), class: "btn btn-default", method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
        </div>
    </div>
<% end %>
